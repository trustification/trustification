{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Endpoints",
  "type": "object",
  "required": [
    "bombastic",
    "oidc",
    "url",
    "vexination"
  ],
  "properties": {
    "bombastic": {
      "type": "string",
      "format": "uri"
    },
    "external_consent": {
      "type": "boolean"
    },
    "oidc": {
      "$ref": "#/definitions/OpenIdConnect"
    },
    "segment_write_key": {
      "type": [
        "string",
        "null"
      ]
    },
    "url": {
      "type": "string",
      "format": "uri"
    },
    "vexination": {
      "type": "string",
      "format": "uri"
    }
  },
  "definitions": {
    "OpenIdConnect": {
      "type": "object",
      "required": [
        "issuer"
      ],
      "properties": {
        "after_logout": {
          "default": "/notloggedin",
          "type": "string"
        },
        "client_id": {
          "default": "frontend",
          "type": "string"
        },
        "end_session_url": {
          "description": "The URL to navigate to for ending the session",
          "default": null,
          "type": [
            "string",
            "null"
          ]
        },
        "issuer": {
          "type": "string"
        },
        "post_logout_redirect_name": {
          "description": "The name of the query parameter receiving the `after_logout` URL",
          "default": null,
          "type": [
            "string",
            "null"
          ]
        },
        "scopes": {
          "default": "openid",
          "type": "string"
        }
      }
    }
  }
}